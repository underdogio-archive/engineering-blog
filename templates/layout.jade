doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title
        block title
          = locals.name
      link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:400,700|Anonymous+Pro:400,700,400italic,700italic')
      link(rel='stylesheet', href=contents.css['main.css'].url)
      link(rel='shortcut icon' href='/favicon.ico')
  body(class=bodyclass)
    .navbar
      .content-wrap.cf
        //- 1024px and up view
        .hidden--portable
          a(href='/')
            img.navbar__logo(alt='Underdog.io', src='/images/logo.png')
          ul.nav.float--right
            li.nav__item
              a.border-link.caps(href='/') Engineering blog
            li.nav__item
              a.border-link.caps(href='https://github.com/underdogio') GitHub
            li.nav__item
              a.btn.btn--default.caps(href='https://underdog.io/') Visit Underdog.io
        //- 480px - 1024px view
        .hidden--palm.hidden--desk
          div.text--center
            a(href='/')
              img.navbar__logo(alt='Underdog.io', src='/images/logo.png')
          ul.nav.text--center
            li.nav__item
              a.border-link.caps(href='/') Engineering blog
            li.nav__item
              a.border-link.caps(href='https://github.com/underdogio') GitHub
            li.nav__item
              a.btn.btn--default.caps(href='https://underdog.io/') Visit Underdog.io
        //- 480px and below view
        .hidden--lap-and-up
          div.text--center
            a(href='/')
              img.navbar__logo(alt='Underdog.io', src='/images/dog.png')
          ul.nav.text--center
            li.nav__item
              a.caps(href='/') Eng. blog
            li.nav__item
              a.caps(href='https://github.com/underdogio') GitHub
            li.nav__item
              a.caps(href='https://underdog.io/') Underdog.io
    header.header
      div.content-wrap
        block header
          div.logo
            h1
              a(href=locals.url)= locals.name
            p.description= locals.description
    div#content
      div.content-wrap
        block content
    footer
      div.content-wrap
        block footer
          section.copy.muted
            p &copy; #{ new Date().getFullYear() } #{ locals.owner } &mdash; powered by&nbsp;
              a(href='https://github.com/jnordberg/wintersmith') Wintersmith
              //- please leave the "powered by" if you use the design
    //- Environment settings
    script.
      window.env = {gaId: '#{locals.ga_id}'};
    //- Google analytics
    script.
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', window.env.gaId, 'auto');
      ga('send', 'pageview');
